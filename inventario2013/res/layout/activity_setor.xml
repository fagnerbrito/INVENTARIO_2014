<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetorActivity" >

    <EditText
        android:id="@+id/setor_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp" >
       <requestFocus />
</EditText>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/andar_edittext"
        android:layout_below="@+id/andar_edittext"
        android:text="Inventariante:" />

    <TextView
        android:id="@+id/setor_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setor_edittext"
        android:layout_below="@+id/setor_edittext"
        android:text="Sala:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/sala_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setor_listview"
        android:layout_alignRight="@+id/setor_edittext"
        android:layout_below="@+id/setor_listview" />

     


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sala_edittext"
        android:layout_below="@+id/sala_edittext"
        android:text="Andar:" />

    <EditText
        android:id="@+id/andar_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:inputType="number" />

    <Button
        android:id="@+id/salvarsetor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventariante_edittext"
        android:layout_centerHorizontal="true"
        android:text="SALVAR" />

    <EditText
        android:id="@+id/inventariante_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/sala_edittext"
        android:layout_below="@+id/textView4" />

    <TextView
        android:id="@+id/tombotela_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setor_edittext"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Setor:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
